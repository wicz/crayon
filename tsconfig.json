{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "baseUrl": "./src",
        "rootDir": "./src",
        "lib": [
            "dom",
            "es2017"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts",

    ],
    "exclude": [
        "node_modules", 
        "**.tests.ts",
        "dist"
    ]
}
